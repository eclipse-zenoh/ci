{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./__tests__",
    "./build.js",
    "./tsup.config.ts"
  ]
}